<Window x:Class="MDM.PropertiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Download Properties" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="File Name:" Grid.Row="0" Grid.Column="0"/>
        <TextBlock x:Name="fileNameTextBlock" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="URL:" Grid.Row="1" Grid.Column="0"/>
        <TextBlock x:Name="urlTextBlock" Grid.Row="1" Grid.Column="1" Margin="5" TextWrapping="Wrap"/>

        <Label Content="Status:" Grid.Row="2" Grid.Column="0"/>
        <TextBlock x:Name="statusTextBlock" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Label Content="Size:" Grid.Row="3" Grid.Column="0"/>
        <TextBlock x:Name="sizeTextBlock" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <Label Content="Downloaded:" Grid.Row="4" Grid.Column="0"/>
        <TextBlock x:Name="downloadedTextBlock" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <Button Content="Close" Click="Close_Click" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right" Margin="5" Width="75"/>
    </Grid>
</Window>